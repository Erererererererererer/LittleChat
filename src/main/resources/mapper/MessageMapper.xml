<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcser.littlechat.mapper.MessageMapper">

    <insert id="insert" parameterType="com.bitcser.littlechat.entity.Message">
        INSERT INTO `messages` (sender_id, receiver_id, content, message_type, status, time)
        VALUES (#{senderId}, #{receiverId}, #{content}, #{messageType}, #{status}, #{time})
    </insert>

    <select id="selectById" parameterType="com.bitcser.littlechat.entity.Message" resultType="com.bitcser.littlechat.entity.Message">
        SELECT * FROM `messages` WHERE id = #{id}
    </select>


</mapper>